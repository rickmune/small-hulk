@{
    ViewBag.Title = "Index";
}
@model List<TDR.Controllers.ReportMenu>

<div class="page-header">
    <h1>Report Menu </h1>
</div>
@{
    foreach (var menu in Model)
    {
        <div class="col-lg-4 ">
            <div   class="panel panel-default">
                <div class="panel-heading">@menu.Name</div>
                <div class="panel-body">
                    @foreach (var menuItem in menu.Item)
                    {
                        @Html.ActionLink(menuItem.Name,"Navigation",new { reporturi=menuItem.Uri,reportname=menuItem.Name},new {@class="list-group-item"})
                       
                    }
                </div>
            </div>
        </div>
    }
}

