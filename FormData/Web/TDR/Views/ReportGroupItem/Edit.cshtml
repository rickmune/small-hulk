@model TDR.WEB.LIB.DTOS.BI.ReportGroupItemDTO

@{
    ViewBag.Title = "Edit";
}

<div class="page-header">
    <h1>Report Item Form </h1>
</div>

@using (Html.BeginForm("Edit", "ReportGroupItem", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
     @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(s=>s.Id)

    <div class="form-group">
        <label for="Username" class="col-lg-2 control-label">Name</label>
        <div class="col-lg-5">
              @Html.TextBoxFor(model => model.Name,new {@placeholder="Name",@class="form-control"})
            @Html.ValidationMessageFor(model => model.Name )
           @* <input type="text" class="form-control" id="inputUsername" placeholder="Username">*@
        </div>
    </div>
    <div class="form-group">
        <label for="Description" class="col-lg-2 control-label">Description</label>
        <div class="col-lg-5">
            @Html.TextBoxFor(model => model.Description,new {@placeholder="Description",@class="form-control"})
            @Html.ValidationMessageFor(model => model.Description )
            @*<input type="text" class="form-control" id="inputFullname" placeholder="Full Name">*@
        </div>
    </div>
    <div class="form-group">
        <label for="ReportUrl" class="col-lg-2 control-label">Report URL</label>
        <div class="col-lg-5">
            @Html.TextBoxFor(model => model.ReportUrl,new {@placeholder="ReportUrl",@class="form-control"})
            @Html.ValidationMessageFor(model => model.ReportUrl )
            @*<input type="text" class="form-control" id="inputFullname" placeholder="Full Name">*@
        </div>
    </div>
     <div class="form-group">
        <label for="ReportOrder" class="col-lg-2 control-label">Order</label>
        <div class="col-lg-5">
            @Html.TextBoxFor(model => model.ReportOrder,new {@placeholder="ReportOrder",@class="form-control"})
            @Html.ValidationMessageFor(model => model.ReportOrder )
            @*<input type="text" class="form-control" id="inputFullname" placeholder="Full Name">*@
        </div>
    </div>
    <div class="form-group">
        <label for="GroupId" class="col-lg-2 control-label">Group</label>
        <div class="col-lg-5">
              @Html.DropDownListFor(model => model.GroupId, new SelectList(ViewBag.GroupList,"Value","Text"),"-----------",new {@placeholder="Group",@class="form-control"})
            @Html.ValidationMessageFor(model => model.GroupId )
           @* <input type="text" class="form-control" id="inputUserType" placeholder="User Type">*@
        </div>
    </div>
    <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <button type="submit" class="btn btn-default">Save</button>
    </div>
  </div>
}

<div>
    @Html.ActionLink("Back", "Index",null,new { @class="btn btn-default"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
