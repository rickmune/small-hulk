<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="wrap_content">
    <TextView  android:id="@+id/list_item_name" android:layout_width="match_parent" 
        android:textIsSelectable="false" android:gravity="center_vertical|left" android:textStyle="bold"
        android:layout_height="wrap_content" android:textSize="22sp" android:textColor="@android:color/white" 
        android:layout_marginLeft="15dp"/>
    <TextView  android:id="@+id/underline" android:layout_width="match_parent" android:textIsSelectable="false" 
	    android:gravity="center_vertical|center_horizontal" android:layout_height="1dp" 
	    android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:background="@color/yellow"
	    android:layout_marginBottom="7dp"/>
</LinearLayout>