<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:paddingLeft="10dip" android:paddingRight="10dip"
    android:paddingTop="10dip" android:paddingBottom="10dip">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" 
        android:orientation="vertical">
        <LinearLayout  android:layout_width="match_parent" android:layout_height="wrap_content" 
	        android:orientation="vertical" android:id="@+id/button_holder">
	        <Button android:id="@+id/town_btn" android:layout_width="match_parent" android:minWidth="300dip"
	        	android:layout_height="wrap_content" android:text="@string/town_select"/>
    	</LinearLayout>
    </ScrollView>
    <LinearLayout android:layout_width="match_parent" android:layout_marginTop="10dip"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:id="@+id/town_cancel" android:layout_width="wrap_content" android:layout_weight="1" 
        	android:layout_height="wrap_content" android:text="@string/cancel"
        	android:layout_marginRight="10dip" android:background="@drawable/button_blue"/>
        <Button android:id="@+id/town_ok" android:layout_width="wrap_content" android:layout_weight="1" 
        	android:layout_height="wrap_content" android:text="@android:string/ok"
        	android:background="@drawable/button_blue"/>
    </LinearLayout>
</LinearLayout>
