<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:layout_marginLeft="5dip"
    android:layout_marginTop="4dip" android:layout_marginRight="5dip">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/msg_date" android:textSize="18sp"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_marginTop="4dip">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        	android:id="@+id/msg_pre_text" android:textIsSelectable="false" android:textSize="18sp"/>
	    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
	        android:id="@+id/msg_text" android:textIsSelectable="true" android:textSize="20sp"/>
    </LinearLayout>
    <TextView android:layout_width="match_parent" android:layout_height="2dip"
        android:background="@color/yellow" android:layout_marginTop="4dip"/>
</LinearLayout>
