<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView android:id="@+id/list_code" android:layout_width="match_parent" android:textIsSelectable="false"
        android:layout_height="wrap_content" android:textSize="18sp" android:paddingBottom="5dp" android:paddingLeft="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center_vertical|left"/>
 
    <TextView android:id="@+id/list_name" android:layout_width="match_parent" android:textIsSelectable="false" android:gravity="center_vertical|left"
        android:layout_height="wrap_content" android:textSize="20sp" android:paddingBottom="5dp" android:paddingLeft="15dp"/>
    <TextView android:id="@+id/list_div" android:layout_width="match_parent" android:textIsSelectable="false" 
        android:layout_height="1dp" android:background="@color/orange" android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
</LinearLayout>