<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView android:id="@+id/list_code" android:layout_width="match_parent" android:textIsSelectable="false"
        android:layout_height="wrap_content" android:textSize="12sp" android:paddingBottom="5dp" />
 
    <TextView android:id="@+id/list_name" android:layout_width="match_parent" android:textIsSelectable="false"
        android:layout_height="wrap_content" android:textSize="16sp" android:paddingBottom="5dp" />

</LinearLayout>